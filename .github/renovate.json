{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prConcurrentLimit": 2,
  "lockFileMaintenance": {
    "enabled": true,
    "prConcurrentLimit": 10
  },
  "automerge": true,
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "automerge": false,
      "matchUpdateTypes": ["major"]
    }
  ]
}
